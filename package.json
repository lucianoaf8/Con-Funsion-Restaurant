{
    "name": "confusion",
    "version": "1.0.0",
    "description": "This is a website for Ristorante Con Fusion",
    "main": "index.html",
    "scripts": {
        "start": "npm run watch:all",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lite": "lite-server",
        "scss": "node-sass -o css/ css/",
        "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
        "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\"",
        "clear": "rimraf dist",
        "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
        "imagemin": "imagemin img/* --out-dir dist/img/",
        "usemin": "usemin contactus.html -d dist --htmlmin -o dist/contactus.html && usemin aboutus.html -d dist --htmlmin -o dist/aboutis.html && usemin index.html -d dist --htmlmin -o dist/index.html",
        "build": "npm run clear && npm run copyfonts && npm run imagemin && npm run usemin"
    },
    "author": "Luciano Almeida",
    "license": "ISC",
    "devDependencies": {
        "lite-server": "^2.3.0"
    },
    "dependencies": {
        "bootstrap": "^4.0.0-beta.2",
        "cssmin": "^0.4.3",
        "font-awesome": "^4.7.0",
        "grunt": "^1.3.0",
        "grunt-browser-sync": "^2.2.0",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-sass": "^3.1.0",
        "htmlmin": "0.0.7",
        "jit-grunt": "^0.10.0",
        "jquery": "^3.2.1",
        "node-sass": "^4.14.1",
        "onchange": "^7.0.2",
        "parallelshell": "github:darkguy2008/parallelshell#8fd83e2",
        "popper.js": "^1.12.6",
        "rimraf": "^3.0.2",
        "time-grunt": "^2.0.0",
        "uglifyjs": "^2.4.11",
        "usemin-cli": "^0.6.0"
    }
}
